# if, elif, else digunakan untuk percabangan algoritma Python
# menentukan alur program bekerja sesuai kondisi

print("="*20)
print("if PADA PYTHON")
print("="*20)

# dibaca : Variabel 5 adalah
a = 5
# dibaca    : Jika variabel a bernilai 5
# maka      : print('nilai a adalah 5')
print("nilai a adalah",a)
print("jika nilai a == 5 print()")
if a == 5:
    print('PRINT : nilai a adalah 5\n')
# else      : Jika tidak memenuhi kondisi sama sekali
else:
    pass

print("="*20)
# kondisi input user
print("\nJika nilai b adalah kelipatan 2 maka print()")
b = int(input("nilai b :"))
if b%2 == 0:
    print("nilai",b,"adalah kelipatan 2\n")
else:
    print("nilai",b,"bukan kelipatan 2\n")

print("="*20)
# kondisi aritmatika
if (a*b)%10 == 0:
    print(b,"kelipatan 2 maka hasil a x b kelipatan 10")
    print("nilai a x b : ",(a*b))
else:
    print(b,"bukan kelipatan 2 maka hasil a x b tidak kelipatan 10")
    print("nilai a x b : ",(a*b))
